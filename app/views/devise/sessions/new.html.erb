<h2>Welcome Back</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="small-6 columns">
      <%= f.text_field :email, placeholder: 'Email', required: false, autofocus: true %>
    </div>
  </div>
  <div class="row">
    <div class="small-6 columns">
      <%= f.password_field :password, placeholder: 'Password', required: false %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
  </div>
  <div>
    <%= f.button :submit, "Sign In", class: 'button radius' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
